{
  "name": "bl-electron-remix",
  "type": "module",
  "main": "build/main/main.js",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "prepare": "husky",
    "preinstall": "node check-node-version.js",
    "dev": "node --loader ts-node/esm ./server.dev.ts",
    "build:renderer": "NODE_ENV=production remix vite:build -c src/renderer/vite.config.ts",
    "build:app": "npm run build:win64",
    "build:win64": "npm run build:renderer && ./electron-builder.sh --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-serve": "^2.1.1",
    "electron-store": "^10.0.0",
    "@remix-run/express": "^2.12.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "isbot": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.12.1",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "esbuild": "^0.23.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run lint",
    "*.{js,jsx,ts,tsx,css,md,html,json}": "prettier --cache --write"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=20.0.0"
  }
}
